    <script>
        $(document).ready(function () {
            var href = window.location.href;
            const firstNavLink = $(".nav-sidebar .first-nav-link");
            // $(".nav-sidebar .first-nav-link").parent().removeClass("menu-open")
            const secondNavLink = $(".nav-sidebar .second-nav-link");
            secondNavLink.removeClass("active")
            const navLength = secondNavLink.length;
            for (var i = 0; i < navLength; i++) {
                if (secondNavLink.eq(i).prop("href") == href) {
                    console.log(secondNavLink.eq(i).prop("href"));
                    secondNavLink.eq(i).addClass("active");
                    secondNavLink.eq(i).parent().parent().parent().find(".first-nav-link").addClass(
                        "active").parent().addClass("menu-open");
                }
            }

            checkExpiredToken();
            /* if (Number('{{position}}') != 1) {
                 $(".only-super-admin").hide();
             }*/

        });

        function checkExpiredToken() {
            var expiredTime = new Date(Number('{{token_expired}}' + '000'));
            if (new Date() > expiredTime) {
                Swal.fire({
                    title: "หมดอายุ กรุณาล๊อคอินอีกครั้ง"
                }).
                then((result) => {
                    window.location.href = '{{base_url}}' + '/login';
                });
            }
        }
    </script>

